{
  "version": "0.0.29",
  "name": "boxdraw-extension",
  "displayName": "Boxdraw",
  "description": "boxdraw extension / 罫線文字による図形の描画",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "text",
    "character",
    "line"
  ],
  "publisher": "taizod1024",
  "main": "./build/main.js",
  "browser": "./build/main.js",
  "contributes": {
    "commands": [
      {
        "command": "boxdraw.toggleMode",
        "title": "Boxdraw: Toggle Mode"
      },
      {
        "command": "boxdraw.toggleBlock",
        "title": "Boxdraw: Toggle Block"
      }
    ],
    "keybindings": [
      {
        "command": "boxdraw.toggleMode",
        "key": "ctrl+alt+m"
      },
      {
        "command": "boxdraw.toggleBlock",
        "key": "ctrl+alt+b"
      },
      {
        "command": "boxdraw.cursorUp",
        "key": "up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.cursorDown",
        "key": "down",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawLeft",
        "key": "ctrl+left",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawRight",
        "key": "ctrl+right",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawUp",
        "key": "ctrl+up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawDown",
        "key": "ctrl+down",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawLeft",
        "key": "alt+left",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawRight",
        "key": "alt+right",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawUp",
        "key": "alt+up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawDown",
        "key": "alt+down",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawLeftArrow",
        "key": "ctrl+alt+left",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawRightArrow",
        "key": "ctrl+alt+right",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawUpArrow",
        "key": "ctrl+alt+up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawDownArrow",
        "key": "ctrl+alt+down",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearLeft",
        "key": "ctrl+shift+left",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearRight",
        "key": "ctrl+shift+right",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearUp",
        "key": "ctrl+shift+up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearDown",
        "key": "ctrl+shift+down",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearLeft",
        "key": "alt+shift+left",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearRight",
        "key": "alt+shift+right",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearUp",
        "key": "alt+shift+up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearDown",
        "key": "alt+shift+down",
        "when": "boxdrawMode"
      }
    ],
    "configuration": {
      "properties": {
        "boxdraw.useSingle": {
          "type": "boolean",
          "default": false,
          "description": "The width of box-drawing characters is equivalent to that of a single half-width space."
        },
        "boxdraw.debug": {
          "type": "boolean",
          "default": false,
          "description": "debug mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=build/main.js --format=cjs --platform=node --external:vscode",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test": "node ./build/test/runTest.js",
    "release": "npm run release-premerge && npx standard-version && vsce publish --allow-star-activation && npm run release-postmerge",
    "release-premerge": "git switch main && git merge --no-ff develop",
    "release-postmerge": "git push --follow-tags origin main && git push origin develop && git switch develop",
    "package": "vsce package --allow-star-activation",
    "clean": "rmdir /q /s .\\build || exit /b 0"
  },
  "author": "yamamoto.taizo <taizod1024@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.9.6",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "esbuild": "^0.13.6",
    "eslint": "^7.32.0",
    "husky": "^4.3.8",
    "standard-version": "^9.3.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taizod1024/vscode-boxdraw-extension.git"
  },
  "dependencies": {
    "eastasianwidth": "^0.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./bin/check_no_main_branch.sh",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
