{
  "name": "boxdraw-extension",
  "displayName": "Boxdraw",
  "description": "vscode boxdraw extension",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "taizod1024",
  "main": "./build/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "boxdraw.toggleMode",
        "title": "Boxdraw: Toggle Mode"
      },
      {
        "command": "boxdraw.toggleBlock",
        "title": "Boxdraw: Toggle Block"
      },
      {
        "command": "boxdraw.toggleDebug",
        "title": "Boxdraw: Toggle Debug"
      }
    ],
    "keybindings": [
      {
        "command": "boxdraw.toggleMode",
        "key": "ctrl+alt+m"
      },
      {
        "command": "boxdraw.toggleBlock",
        "key": "ctrl+alt+b"
      },
      {
        "command": "boxdraw.cursorUp",
        "key": "up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.cursorDown",
        "key": "down",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawLeft",
        "key": "ctrl+left",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawRight",
        "key": "ctrl+right",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawUp",
        "key": "ctrl+up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawDown",
        "key": "ctrl+down",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawLeftArrow",
        "key": "ctrl+alt+left",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawRightArrow",
        "key": "ctrl+alt+right",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawUpArrow",
        "key": "ctrl+alt+up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.drawDownArrow",
        "key": "ctrl+alt+down",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearLeft",
        "key": "ctrl+shift+left",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearRight",
        "key": "ctrl+shift+right",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearUp",
        "key": "ctrl+shift+up",
        "when": "boxdrawMode"
      },
      {
        "command": "boxdraw.clearDown",
        "key": "ctrl+shift+down",
        "when": "boxdrawMode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./build/test/runTest.js",
    "release": "git switch main && git merge --no-ff develop && npx standard-version && vsce publish && git push --follow-tags origin main && git push origin develop && git switch develop"
  },
  "author": "yamamoto.taizo <taizod1024@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.6",
    "@types/superagent": "^4.1.13",
    "@types/superagent-proxy": "^2.0.1",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "bufferutil": "^4.0.3",
    "eslint": "^7.32.0",
    "generator-code": "^1.6.1",
    "husky": "^4.3.8",
    "mocha": "^9.1.1",
    "standard-version": "^9.3.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "utf-8-validate": "^5.0.5",
    "vscode": "^0.9.9",
    "vscode-test": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taizod1024/vscode-boxdraw-extension.git"
  },
  "dependencies": {
    "eastasianwidth": "^0.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./bin/check_no_main_branch.sh",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
